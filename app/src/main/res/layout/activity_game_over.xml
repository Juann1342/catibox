<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    android:paddingTop="12dp">

    <!-- Banner fuera del scroll -->
    <LinearLayout
        android:id="@+id/bannerGameOverContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Contenido desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="32dp"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/gameOverTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/game_over"
                android:textAllCaps="true"
                android:textSize="36sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/levelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level: 0"
                android:textSize="26sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/scoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_game_over"
                android:textSize="26sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/streakTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/streak_game_over"
                android:textSize="26sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/extraMessageScoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="@android:color/holo_red_light"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/highScoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/high_score"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/extraMessageStreakTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="@android:color/holo_red_light"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/highStreakTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/longest_streak"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Botones dentro del scroll -->
            <Button
                android:id="@+id/playAgainButton"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="@string/play_again"
                android:textSize="24sp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/reviveCurrentLevelButton"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Revive en este nivel (1 vida)"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/reviveNextLevelButton"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Revive en el siguiente nivel (3 vidas)"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
