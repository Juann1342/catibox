<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menuRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    tools:context=".GameOverActivity">

    <!-- Banner fuera del scroll -->
    <LinearLayout
        android:id="@+id/bannerGameOverContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenido desplazable -->
    <ScrollView
        android:id="@+id/scrollViewGameOver"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bannerGameOverContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/gameOverTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/game_over"
                android:textAllCaps="true"
                android:textSize="36sp"
                android:textColor="#FD2121"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvPhraseGameOver"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="#FBC02D"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/gameOverTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/levelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/level_game_over"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/tvPhraseGameOver"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/scoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_game_over"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/levelTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/streakTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/streak_game_over"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/scoreTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/extraMessageScoreTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="@android:color/holo_red_light"
                android:visibility="gone"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/streakTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/highScoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/high_score"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/extraMessageScoreTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/extraMessageStreakTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="@android:color/holo_red_light"
                android:visibility="gone"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/highScoreTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/highStreakTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/longest_streak"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/extraMessageStreakTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/highStreakTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"/>

            <Button
                android:id="@+id/playAgainButton"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="@string/play_again"
                android:textSize="24sp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/progressBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/reviveCurrentLevelButton"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/try_current_level"
                android:textSize="20sp"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/playAgainButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/reviveNextLevelButton"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/try_next_level"
                android:textSize="20sp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/reviveCurrentLevelButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
